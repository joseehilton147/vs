{
	"arrowParens": "avoid",
	"bracketSpacing": false,
	"endOfLine": "auto",
	"htmlWhitespaceSensitivity": "css",
	"bracketSameLine": false,
	"printWidth": 120,
	"proseWrap": "preserve",
	"requirePragma": false,
	"semi": false,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"vueIndentScriptAndStyle": true,
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"printWidth": 200
			}
		}
	],
	"plugins": ["prettier-plugin-tailwindcss"]
}
